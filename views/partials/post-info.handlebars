<article class="post">
    <div class="title">
        <span class="user-id"><i class="bi bi-at"></i>{{user.username}} posted on {{ format_date
            created_at}}</span> <br>
        <a href="/post/{{id}}">{{title}}</a>
        <p class="post-body">{{body}}</p>
        <p><img src = {{url}}></p>


    </div>
    <div class="meta">
        <a href="/post/{{id}}"><i class="bi bi-chat-fill"></i> {{comments.length}} {{format_plural "comment"
            comments.length}}</a>
    </div>
</article>