<article>
    <a href="/dashboard"> &larr; Back to dashboard</a>
    <h2>
        Edit Post
    </h2>
    <form class="edit-post-form">
        <div>
            <p>Edit Title</p>
            <input name="post-title" type="text" value="{{post.title}}" />
        </div>
        <div>
            <p>Edit Body</p>
            <textarea name="post-body" value="{{post.body}}"></textarea>
        </div>
        <div>
            Posted by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit" class="btn btn-success">Save post</button>
        <button type="button" class="delete-post-btn btn btn-success">Delete post</button>
    </form>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
